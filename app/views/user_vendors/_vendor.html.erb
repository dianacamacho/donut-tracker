<div class="col s12 l6">
  <div class="card">
    <div class="card-image">
      <%= image_tag vendor.image.small %>
      <span class="card-title"><%= vendor.name %></span>
      <a class="btn-floating halfway-fab waves-effect waves-light red" href="#modal-vendor-unsubscribe-<%= user_vendor_id %>"><i class="material-icons">close</i></a>
    </div>
    <div class="card-content">
      <% if vendor.sold_out? %>
        <div class="tag center">
          <i class="small material-icons">location_off</i>
          <div class="tag-text">Sold Out</div>
        </div>
      <% else %>
        <div class="tag center">
          <i class="small material-icons">location_on</i>
          <div class="tag-text">Get your donuts starting at <%= vendor.opening_time.strftime("%l:%M %p") %>!</div>
        </div>
      <% end %>
      <ul class="collection vendor-specials">
        <li class="collection-item center teal lighten-2 white-text"><strong>Today's Specials</strong></li>
        <% vendor.day_specials.each do |tw| %>
          <li class="collection-item center"><%= tw %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<%= render 'unsubscribe_modal', vendor: vendor, user_vendor_id: user_vendor_id %>
