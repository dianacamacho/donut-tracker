<div class="row">
  <h3>Create My Account</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col s12"}) do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :first_name, autofocus: true, class: "validate", placeholder: "First Name" %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :last_name, autofocus: true, class: "validate", placeholder: "Last Name" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.email_field :email, autofocus: true, class: "validate", placeholder: "Email Address" %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :phone, autofocus: true, class: "validate", placeholder: "Phone Number (+15555555555)" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.password_field :password, class: "valdate", placeholder: "Password" %>
      </div>
      <div class="input-field col s6">
        <%= f.password_field :password_confirmation, class: "valdate", placeholder: "Password Confirmation" %>
      </div>
    </div>
    <div class="actions">
      <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
        <i class="material-icons right">send</i>
      </button>
    </div>
  <% end %>
  <div class="col s12 mt-30">
    <%= render "devise/shared/links" %>
  </div>
</div>

