<%= form_for(@vendor, html: { class: "col s12"}) do |f| %>
  <div class="row">
    <div class="col s6">
      <div class="input-field">
        <%= f.text_field :name, autofocus: true, class: "validate", placeholder: "Name" %>
      </div>
    </div>
    <div class="col s6">
      <div class="input-field">
        <input id="timepicker" class="timepicker" type="time" name="vendor[opening_time]" placeholder="Opening Time">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
      <%= f.text_field :twitter, autofocus: true, class: "validate", placeholder: "Twitter Handle" %>
    </div>
    <div class="input-field col s6">
      <%= f.text_field :hashtag, autofocus: true, class: "validate", placeholder: "Hashtag on Twitter" %>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <div class="file-field input-field">
        <div class="btn">
          <span>Image File</span>
          <%= f.file_field :image %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </div>
  </div>
  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
    <%= link_to "Cancel", vendors_path, class: "btn waves-effect waves-light" %>
  </div>
<% end %>
